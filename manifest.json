{
  "manifest_version": 2,
  "name": "Anilist RUS translator",
  "version": "0.1",

  "description": "Enhanced AniList experience",

  "page_action": {
      "default_title": "AniList+ for Anilist",
      "default_icon": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "64": "images/icon.png",
        "128": "images/icon-128.png"
      }
    },
  "author": "consequential",
  "content_scripts": [
    {
      "matches": ["*://anilist.co/*"],
      "js": [
        "jquery-3.7.0.min.js",
        "list_visual_changes.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "minimum_chrome_version": "50",
  "permissions": ["*://anilist.co/*"],
  "short_name": "AniList+",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "64": "images/icon.png",
    "128": "images/icon-128.png"
  }
  }
